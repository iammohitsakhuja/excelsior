{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Excelsior Help",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "excelsior",
                "--help"
            ],
            "group": "build",
            "problemMatcher": [],
            "isBackground": false,
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Install Excelsior (Development)",
            "type": "shell",
            "command": "uv",
            "args": [
                "sync",
                "--extra",
                "dev"
            ],
            "group": "build",
            "problemMatcher": [],
            "isBackground": false,
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Format Python Code (Ruff)",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "ruff",
                "format",
                "src/",
                "tests/"
            ],
            "group": "build",
            "problemMatcher": [],
            "isBackground": false,
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Check Python Formatting (Ruff)",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "ruff",
                "format",
                "--check",
                "src/",
                "tests/"
            ],
            "group": "test",
            "problemMatcher": [],
            "isBackground": false,
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Lint Python Code (Ruff)",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "ruff",
                "check",
                "src/",
                "tests/"
            ],
            "group": "build",
            "problemMatcher": [],
            "isBackground": false,
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Format All (Ruff Format + Fix)",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "ruff",
                "format",
                "src/",
                "tests/"
            ],
            "group": "build",
            "problemMatcher": [],
            "isBackground": false,
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "Fix Linting Issues (Ruff)",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Fix Linting Issues (Ruff)",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "ruff",
                "check",
                "--fix",
                "src/",
                "tests/"
            ],
            "group": "build",
            "problemMatcher": [],
            "isBackground": false,
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}
